<Window x:Class="Selection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Dear Diary" Height="350" Width="525" MinHeight="350" MinWidth="525">
    
    <Grid Background="AliceBlue" ShowGridLines="False">

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.75*"/>

        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>

            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>
        
        <Rectangle Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        <Rectangle Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        <Rectangle Grid.Column="3" Grid.Row="1" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        <Rectangle Grid.Column="4" Grid.Row="1" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        
        <Rectangle Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        <Rectangle Grid.Column="2" Grid.Row="2" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        <Rectangle Grid.Column="3" Grid.Row="2" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        <Rectangle Grid.Column="4" Grid.Row="2" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        
        <Rectangle Grid.Column="1" Grid.Row="3" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        <Rectangle Grid.Column="2" Grid.Row="3" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        <Rectangle Grid.Column="3" Grid.Row="3" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>
        <Rectangle Grid.Column="4" Grid.Row="3" VerticalAlignment="Top" Fill="LightBlue"  Margin="5,5,5,0" Height="64"/>



    </Grid>
</Window>
